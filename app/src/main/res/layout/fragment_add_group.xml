<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pawan.schooldiary.home.teacher.fragment.group.AddGroupFragment">


    <EditText
        android:id="@+id/edit_text_group_name"
        android:hint="Enter Group Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/button_create_group"
        android:layout_below="@+id/edit_text_group_name"
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/button_create_group"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="Create Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
